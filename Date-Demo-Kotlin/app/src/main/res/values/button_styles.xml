<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Button Style -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Elevated Button -->
    <style name="ElevatedButtonStyle" parent="Widget.Material3.Button.ElevatedButton">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="backgroundTint">@color/elevated_button_background</item>
        <item name="rippleColor">@color/colorSurfaceVariant</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OutlinedButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="background">@drawable/outlined_button_background</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="rippleColor">@color/colorSurfaceVariant</item>
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!-- Filled Button -->
    <style name="FilledButtonStyle" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="backgroundTint">@color/filled_button_background</item>
        <item name="rippleColor">@color/colorSurfaceVariant</item>
        <item name="android:textColor">@color/filled_button_text_color</item>
    </style>

    <!-- Filled Button -->
    <style name="ErrorButtonStyle" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="backgroundTint">@color/error_button_background</item>
        <item name="rippleColor">@color/colorBackground10</item>
        <item name="android:textColor">@color/error_button_text_color</item>
    </style>

    <!-- Text Button -->
    <style name="TextButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Icon Button -->
    <style name="IconButtonStyle" parent="Widget.Material3.Button.IconButton">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="iconSize">@dimen/_24sdp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="backgroundTint">@color/icon_button_background</item>
    </style>

    <!-- Elevated Icon Button -->
    <style name="ElevatedIconButtonStyle" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="iconSize">@dimen/_24sdp</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="backgroundTint">@color/elevated_icon_button_background</item>
    </style>

    <!-- Filled Icon Button -->
    <style name="FilledIconButtonStyle" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="fontFamily">@font/urbanist_semibold</item>
        <item name="iconSize">@dimen/_24sdp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/filled_icon_button_background</item>
    </style>
</resources>