<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SkeletonRecyclerView">

        <!-- Orientation -->
        <attr name="orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>

        <!-- Layout Item -->
        <attr name="listItem" format="reference" />

        <!-- Grid Layout Configuration -->
        <attr name="spanCount" format="integer" />

        <!-- Item Count for Skeleton Loading -->
        <attr name="itemCount" format="integer" />

        <!-- layout manager of recyclerview -->
        <attr name="layoutManagerType" format="string" />

        <!-- apply default skeleton to whole item of adapter -->
        <attr name="isManualSkeleton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

    <!-- Double Range Seekbar -->
    <declare-styleable name="DoubleValueSeekBarView">
        <attr name="r2minValueStep" format="integer|dimension" />
        <attr name="r2maxValueStep" format="integer|dimension" />
        <attr name="r2maxValue" format="integer|dimension" />
        <attr name="r2minValue" format="integer|dimension" />
        <attr name="r2CurrentMaxValue" format="integer|dimension" />
        <attr name="r2CurrentMinValue" format="integer|dimension" />
        <attr name="r2barHeight" format="dimension" />
        <attr name="r2circleRadius" format="dimension" />
        <attr name="r2circleTextSize" format="dimension" />
        <attr name="r2circleTextColor" format="color" />
        <attr name="r2baseColor" format="color" />
        <attr name="r2fillColor" format="color" />
        <attr name="r2circleFillColor" format="color" />
    </declare-styleable>

    <!-- //  timer circle-->
    <declare-styleable name="CircularTimerView">
        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
        <attr name="strokeWidthDimension" format="dimension" />
        <attr name="backgroundWidth" format="float" />
        <attr name="roundedCorners" format="boolean" />
        <attr name="maxValue" format="float" />
        <attr name="progressTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="progressText" format="string" />
        <attr name="suffix" format="string" />
        <attr name="prefix" format="string" />
        <attr name="isClockwise" format="boolean" />
        <attr name="startingPoint" format="enum">
            <enum name="top" value="270" />
            <enum name="bottom" value="90" />
            <enum name="right" value="0" />
            <enum name="left" value="180" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SkeletonView">
        <attr name="skipOwnSkeleton" format="boolean" />
        <attr name="isSkeleton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SpannedGridLayoutManager">
        <attr name="android:orientation" />
        <attr name="spanCount" />
        <attr name="aspectRatio" format="string" />
    </declare-styleable>

    <declare-styleable name="VerticalOvalLayout">
        <attr name="widthToHeightRatio" format="float" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="spaceBetweenBorderAndContent" format="dimension" />
        <attr name="guideColor" format="color" />
        <attr name="guideWidth" format="dimension" />
        <attr name="showGuides" format="boolean" />
    </declare-styleable>

