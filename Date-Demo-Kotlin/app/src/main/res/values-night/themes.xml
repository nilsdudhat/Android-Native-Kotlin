        <item name="colorBackground90">@color/colorBackground90</item>

        <item name="colorOnBackground01">@color/colorOnBackground01</item>
        <item name="colorOnBackground02">@color/colorOnBackground02</item>
        <item name="colorOnBackground05">@color/colorOnBackground05</item>
        <item name="colorOnBackground10">@color/colorOnBackground10</item>
        <item name="colorOnBackground20">@color/colorOnBackground20</item>
        <item name="colorOnBackground30">@color/colorOnBackground30</item>
        <item name="colorOnBackground40">@color/colorOnBackground40</item>
        <item name="colorOnBackground50">@color/colorOnBackground50</item>
        <item name="colorOnBackground60">@color/colorOnBackground60</item>
        <item name="colorOnBackground70">@color/colorOnBackground70</item>
        <item name="colorOnBackground80">@color/colorOnBackground80</item>
        <item name="colorOnBackground90">@color/colorOnBackground90</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorErrorDark">@color/colorErrorDark</item>
        <item name="colorErrorExtraDark">@color/colorErrorExtraDark</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="dividerColor">@color/colorDivider</item>

        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>

        <item name="dialogBackground">@color/dialogBackground</item>
        <item name="dialogMessageColor">@color/dialogMessageColor</item>
        <item name="dialogBorder">@color/dialogBorder</item>

        <item name="boxBackground">@color/boxBackground</item>
        <item name="boxBorder">@color/boxBorder</item>
        <item name="boxBorderLight">@color/boxBorderLight</item>

        <item name="pureBackground">@color/pure_black</item>
        <item name="pureOnBackground">@color/pure_white</item>

        <item name="android:layoutDirection">ltr</item>
        <item name="android:textDirection">ltr</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>

        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="fontFamily">@font/urbanist_regular</item>
    </style>

    <!-- Splash Theme -->
    <style name="CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_belive</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="colorSurfaceContainerLow">@color/colorBackground</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <!-- Custom style for the ImageButton -->
    <style name="ImageButton.NoBackground" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>