        <item name="colorOnPrimaryVariant">@color/colorOnPrimaryVariant</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="colorBackground01">@color/colorBackground01</item>
        <item name="colorBackground02">@color/colorBackground02</item>
        <item name="colorBackground05">@color/colorBackground05</item>
        <item name="colorBackground10">@color/colorBackground10</item>
        <item name="colorBackground20">@color/colorBackground20</item>
        <item name="colorBackground30">@color/colorBackground30</item>
        <item name="colorBackground40">@color/colorBackground40</item>
